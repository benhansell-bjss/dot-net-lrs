{
  "ConnectionStrings": {
    "DoctrinaDatabase": "Server=localhost;Port=5432;Database=Doctrina;UserId=user;Password=Testing1234;SslMode=Prefer;Trust Server Certificate=true",
    "DoctrinaAuthorizationDatabase": "Server=localhost;Port=5432;Database=DoctrinaIdentity;UserId=user;Password=Testing1234;SslMode=Prefer;Trust Server Certificate=true"
  },
  "profiles": {
    "Default": {
      "commandName": "IISExpress",
      "launchBrowser": true,
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Doctrina": "Warning"
      }
    },
    "shared": true,
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "rollOnFileSizeLimit": true,
          "flushToDiskInterval": "00:00:01",
          "pathFormat": "./Logs/log-{Date}.log",
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Sample"
    }
  },
  "IdentityServer": {
    "Clients": {
      "Northwind.WebUI": {
        "Profile": "IdentityServerSPA"
      }
    }
  },
  "OpenIdConnect": {
    "ClientId": "6ed8a07b-ef74-4adc-9398-b95ce7e5d789",
    "Authority": "https://login.microsoftonline.com/common/",
    "PostLogoutRedirectUri": "https://localhost:44393/",
    "CallbackPath": "/signin-oidc",
    "ResponseType": "code id_token",
    "Resource": "https://graph.microsoft.com/"
  },
  "DistCache": {
    "Type": "Redis",
    "Configuration": "localhost",
    "InstanceName": "DoctrinaInstance"
  },
  "AllowedHosts": "*"
}